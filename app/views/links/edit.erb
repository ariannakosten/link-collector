<h2>Edit Link Details</h2>
<form method="POST" action="/links/<%= @link.id %>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label>Name:</label>
  <input type="text" id="link_name" name="link[name]" value="<%= @link.name %>"><br><br>
  <label>Short Description (optional):</label><br>
  <textarea rows="10" cols="80" id="description" name="link[description]"><%= @link.description %></textarea><br><br>  
  
  <h4>Category</h4>
  <label>Assign your link to a category:</label><br><br>
  <label>Category:</label>
  <input type="text" name="category[title]" id="category_title"></input><br><br>
  
  <% if !@categories.empty? %>
    <label>Or assign your link to an existing category:</label><br>
    <% @categories.each do |category| %>
      <input type="checkbox" name="link[category_ids][]" id="<%= category.id %>" value="<%= category.id %>" <%= 'checked' if @link.categories.include?(category) %>><%= category.title %></input>
    <% end %><br>
  <% end %><br>
  
  <input type="submit" value="Submit">
</form><br>

