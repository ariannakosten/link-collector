<h2>Link List</h2>
<ul class = "spacing">
  <% @links.each do |link| %>
    <li><a href="/links/<%= link.id %>"><%= link.name %></a></li>
  <% end %>
</ul><br>

<% if @links.empty? %>
  <p>You currently do not have any links saved.</p>
  <p> Add a new link entry by clicking<a href="/links/new"> here</a>.</p>
<% end %><br><br>


