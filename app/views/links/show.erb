<div class="flash center">
  <% if flash.has?(:field_error) %>
    <h3 style="color:red;"><%= flash[:field_error] %></h3>
  <% end %>
</div>

<h2>Link Details </h2>

<h4>Link:</h4>
<p><%= @link.name %></p><br>

<h4>Description:</h4>
<p><%= @link.description %></p><br><br>

<h4>Category: </h4>
<p><%= @category.name %></p><br><br>

<p>Need to make changes? Edit link details <a href="/links/<%= @link.id %>/edit">here</a>.</p>
<li>View list of saved links <a href="/links">here</a>.</li><br><br>

<form method="POST" action="/links/<%= @link.id %>">
